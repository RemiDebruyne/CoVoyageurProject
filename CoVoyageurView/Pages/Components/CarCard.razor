@using CoVoyageurCore.Models;
@using CoVoyageurCore.Models
@using static CoVoyageurCore.Models.Car
@page "/carcard"

<div class="flex flex-col justify-between border-blue-600 border-2 rounded-2xl p-4 [&>*]:text-slate-700 ">

        <div class="flex justify-between items-center w-full mb-4">
            <p class="font-semibold text-lg">@Car.Brand @Car.Model</p>
            <div class="rounded-2xl h-8 w-8 @($"bg-{Car.Color.ToString().ToLower()}-500")"></div> 
        </div>
        <p class="italic text-xs">@Car.LicensePlate</p>
</div>

@code {
    [Parameter]
    public Car Car { get; set; } = new();

}
